{
	"name": "@issuefab/model",
	"version": "0.0.67",
	"description": "Model for the issuefab app.",
	"author": "Issuefab Contributors",
	"license": "MIT",
	"repository": "https://github.com/utily/library-template",
	"bugs": {
		"url": "https://github.com/utily/library-template/issues"
	},
	"homepage": "https://github.com/utily",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"type": "module",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"transform": {
			"^.+\\.(j|t)sx?$": [
				"ts-jest",
				{
					"tsconfig": "./tsconfig.test.json"
				}
			]
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|cloudly-http|cloudly-router|cloudly-formdata)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		]
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"lint": "eslint '**/*.{ts,tsx}'",
		"fix": "eslint '**/*.{ts,tsx}' --fix",
		"build": "tsc -p .",
		"test": "jest --maxWorkers=2",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage"
	},
	"devDependencies": {
		"@types/jest": "^29.2.0",
		"@typescript-eslint/eslint-plugin": "5.40.1",
		"@typescript-eslint/parser": "5.40.1",
		"blob-polyfill": "^7.0.20220408",
		"eslint": "^8.25.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20221021",
		"eslint-plugin-simple-import-sort": "^8.0.0",
		"jest": "^29.2.1",
		"prettierx": "github:utily/prettierx#utily-20221021",
		"rimraf": "^3.0.2",
		"ts-jest": "^29.0.3",
		"typescript": "^4.8.4",
		"watch": "^0.13.0"
	},
	"dependencies": {
		"@userwidgets/model": "^0.0.22",
		"authly": "^3.0.1",
		"cryptly": "^3.0.2",
		"isoly": "^2.0.13",
		"pdf-lib": "^1.17.1"
	}
}
