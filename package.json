{
	"name": "@issuefab/model",
	"version": "0.2.2",
	"description": "Model for the issuefab app.",
	"author": "Issuefab Contributors",
	"license": "MIT",
	"repository": "https://github.com/utily/library-template",
	"bugs": {
		"url": "https://github.com/utily/library-template/issues"
	},
	"homepage": "https://github.com/utily",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"type": "module",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"transform": {
			"^.+\\.(j|t)sx?$": [
				"ts-jest",
				{
					"tsconfig": "./tsconfig.test.json"
				}
			],
			"^.+\\.(js)$": "babel-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(@userwidgets/model|cryptly|authly|isoly|gracely|cloudly-rest|cloudly-http|cloudly-router|cloudly-formdata|fetch-blob|formdata-polyfill|isly)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		]
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"lint": "eslint '**/*.{ts,tsx}'",
		"fix": "eslint '**/*.{ts,tsx}' --fix",
		"build": "npm run clean:dist ; tsc -p .",
		"test": "jest",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage",
		"clean:dist": "rimraf dist"
	},
	"devDependencies": {
		"@types/jest": "^29.5.2",
		"@typescript-eslint/eslint-plugin": "5.61.0",
		"@typescript-eslint/parser": "5.61.0",
		"babel-jest": "^29.6.0",
		"eslint": "^8.44.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20221229",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"formdata-polyfill": "^4.0.10",
		"jest": "^29.6.0",
		"prettierx": "github:utily/prettierx#utily-20221229",
		"rimraf": "^5.0.1",
		"ts-jest": "^29.1.1",
		"typescript": "^5.1.6",
		"watch": "0.13.0"
	},
	"dependencies": {
		"@userwidgets/model": "^0.4.4",
		"authly": "^3.0.6",
		"cryptly": "^3.0.4",
		"isly": "^0.1.7",
		"isoly": "^2.0.21",
		"web-file-polyfill": "^1.0.4"
	},
	"overrides": {
		"semver": "7.5.3",
		"optionator": "0.9.3"
	}
}
